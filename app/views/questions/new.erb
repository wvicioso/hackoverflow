<div class="container">
  <div class="row">
    <form class='edit-question submit_question' action="/questions" method="post">
      <div class="input-field col s12 m8">
        <input type="text" id='title' name="question[title]">
        <label for="title">Question title</label>
      </div>
      <div class="input-field col s12 m8">
        <textarea id="textarea1" class="materialize-textarea" name="question[body]"></textarea>
        <label for="textarea1">Question body</label>
      </div>
      <div class="col s12">
        <button class="btn waves-effect waves-light submit" type="submit" name="edit">Ask
          <i class="material-icons right">done</i>
        </button>
        <a href="/questions" class='btn red'><i class="material-icons left">call_made</i>Cancel</a>
      </div>
    </form>
  </div>
</div>
