<div class="container">
    <h2>Questions Page</h2>
    <%if session[:id]%>
    <a id='add_question' href='#'>Ask a question</a>
    <form id="submit_question" action="/questions" method="post">
      <input type="text" name="question[title]" placeholder="title">
      <textarea name="question[question]" placeholder="your question goes here"></textarea>
      <input type="submit" value="ASK">
    </form>
    <%end%>

<% if @questions %>
 
<% if @questions%>
  <ul id="append">
    <% @questions.each do |question| %>
      <li><a class="question" href='/questions/<%= question.id %>'><%= question.title %></a></li>
        <li>Views: <%= question.views %></li>
        <% end %>
      </ul>
    <% end %>
    <% end %>
</div>
